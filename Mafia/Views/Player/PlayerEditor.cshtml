@{
    @model PresentationLayer.Models.PlayerEditModel
}

@if (Model.Id == 0) 
{
<form action="/Player/SavePlayer" method="post">
    <input name="Id" type="hidden" value="@Model.Id" />
    <input name="Name" value="@Model.Name" />
    <input name="NickName" value="@Model.NickName" />

    <input type="submit" />
</form>
}
else
{
    <form action="/Player/SavePlayer" method="post">
        <input name="Id" type="hidden" value="@Model.Id" />
        <input name="Name" value="@Model.Name" />
        <input name="NickName" value="@Model.NickName" />

        <input type="submit" />
    </form> 
}

<h1>Player Editor</h1>


